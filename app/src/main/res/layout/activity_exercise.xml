<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciseActivity">

    <LinearLayout
        android:id="@+id/activity_exercise_top_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:weightSum="4">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_settings_black_24dp"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_computer_black_24dp"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_note_black_24dp"/>
        <Button
            android:id="@+id/activity_exercise_done_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Done"/>

    </LinearLayout>


    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_graph"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_below="@+id/activity_exercise_top_bar"
        />

    <RelativeLayout
        android:id="@+id/exercise_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line_graph">


        <RelativeLayout
            android:id="@+id/exercise_timer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <Spinner
                    android:id="@+id/exercise_selection"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="7" />

                <TextView
                    android:id="@+id/timer"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="3"
                    android:text="1:30"
                    android:textAlignment="center"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sets_weights_reps_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/exercise_timer_layout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="Sets"
                    android:textSize="20dp"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="Pounds"
                    android:textSize="20dp"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="Reps"
                    android:textSize="20dp"
                    android:textAlignment="center"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sets_weights_reps_values"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sets_weights_reps_textView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="20dp"
                    android:textAlignment="center"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="100"
                    android:textSize="20dp"
                    android:textAlignment="center"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="10"
                    android:textSize="20dp"
                    android:textAlignment="center"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/log_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sets_weights_reps_values">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOG"
                android:textSize="30dp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>