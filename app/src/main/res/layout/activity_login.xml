<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="25dp"
    android:paddingBottom="25dp"
    android:id="@+id/login_activity_layout"
    android:background="@drawable/login_gradient_list"
    tools:context="liftinggoals.activities.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="240dp"
                android:layout_height="220dp"
                android:layout_gravity="center_horizontal"
                android:padding="16dp"
                android:layout_marginTop="28dp"
                android:src="@drawable/ic_barbell_and_rack_no_bg_512dp"/>

            <EditText
                android:id="@+id/username_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_person_white_36dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Username"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#FFF"
                android:textColor="@android:color/white"
                android:textSize="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db"/>

            <EditText
                android:id="@+id/password_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_lock_white_36dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint=".............."
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#FFF"
                android:textColor="@android:color/white"
                android:textSize="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db"/>

            <CheckBox
                android:id="@+id/login_activity_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:text="Remember me "
                android:textColor="#FFF" />

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/login_button_bg"
                android:clickable="true"
                android:onClick="loginEvent"
                android:padding="16dp"
                android:text="Log in"
                android:textAllCaps="false"
                android:textColor="#616f7d"
                android:textSize="20dp" />

            <Button
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/register_button_bg"
                android:clickable="true"
                android:onClick="registerEvent"
                android:padding="16dp"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>